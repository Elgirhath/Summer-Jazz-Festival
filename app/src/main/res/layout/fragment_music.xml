<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/art3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:alpha="0.1"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/spotify_title"
        android:textColor="@color/textPrimary"
        android:textSize="25sp"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="36.5dp"
        android:layout_marginStart="36.5dp"
        android:layout_marginRight="36.5dp"
        android:layout_marginEnd="36.5dp"
        app:autoSizeTextType="uniform"/>

    <ImageView
        android:id="@+id/spotify"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_spotify_icon_rgb_white"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_below="@id/spotify"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:text="@string/spotify_content"
        android:textColor="@color/textPrimary"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

</RelativeLayout>