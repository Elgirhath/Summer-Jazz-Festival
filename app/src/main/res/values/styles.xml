<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textColor">#0B0F17</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">#0B0F17</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textColor">#0B0F17</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:checkMark">@drawable/triangle</item>
    </style>

</resources>
